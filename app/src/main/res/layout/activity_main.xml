            android:id="@+id/spapmyaxisEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:numeric="integer"
            android:hint="(y - axis)Enter value between 0 - 576" />
        <EditText
            android:id="@+id/spapmxlengthEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:numeric="integer"
            android:hint="(x - Length)Enter value between 0 - 576" />
        <EditText
            android:id="@+id/spapmylengthEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:numeric="integer"
            android:hint="(y - Length)Enter value between 0 - 576" />

        <Button
            android:id="@+id/specifyPrintAreaOnPageModeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="Specify the print area on page mode"/>

        <EditText
            android:id="@+id/setPhysicalPositionEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:numeric="integer"
            android:hint="Enter value between 0 - 576" />
        <Button
