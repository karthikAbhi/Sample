            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="Set the physical position"/>

        <EditText
            android:id="@+id/setLogicalPositionEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:numeric="integer"
            android:hint="Enter value between 0 - 576" />
        <Button
            android:id="@+id/setLogicalPositionButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="Set the logical position"/>

        <EditText
            android:id="@+id/setVPPOnPageModeEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:numeric="integer"
            android:hint="Enter value between 0 - 576" />
        <Button
            android:id="@+id/setVPPOnPageModeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="Set the vertically physical position on page mode"/>

        <EditText
            android:id="@+id/setVLPOnPageModeEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:numeric="integer"
            android:hint="Enter value between 0 - 576" />
        <Button
            android:id="@+id/setVLPOnPageModeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="Set the vertically logical position on page mode"/>

        <Button
