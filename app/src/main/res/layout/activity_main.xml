            android:id="@+id/printRasterBitImageButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="Print Raster Bit Image"/>

        <EditText
            android:id="@+id/selectPNVBitEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:numeric="integer"
            android:hint="(Select) Enter value between 1 - 255" />
        <EditText
            android:id="@+id/modePNVBitEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:numeric="integer"
            android:hint="(Mode) Enter value between 0 - 3" />
        <Button
            android:id="@+id/printNVBitImageButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="Print NV Bit Image"/>

        <EditText
            android:id="@+id/selectSNVBitEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:numeric="integer"
            android:hint="(Select) Enter value between 1 - 255" />
        <EditText
            android:id="@+id/modeSNVBitEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:numeric="integer"
            android:hint="(Mode) Enter value between 4 - 7" />
        <EditText
            android:id="@+id/offsetSNVBitEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:numeric="integer"
            android:hint="(Offset) Enter value between 0 - 255" />
